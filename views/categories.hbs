<div id="page-wrapper">
    <div class="container">



        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Danh s√°ch danh muc
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each categories}}
                                    <tr class="ancut">
                                        <td>{{this._id}}</td>
                                        <td>{{this.name}}</td>
                                        <td>{{this.description}}</td>
                                        <td>
                                            <button onclick="goEdit('{{this._id}}')" class="btn btn-link">Edit</button>
                                            <button onclick="goDelete('{{this._id}}')" data-toggle="modal"
                                                data-target="#confirmModal" class="btn btn-link">Remove</button>

                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--  Modals-->
    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Confirm action</h4>
                </div>
                <div class="modal-body">
                    <div class="panel-body">
                        <h3>Are you sure?</h3>
                        <div class="form-group modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button type="button" onclick="onDelete()" class="btn btn-primary">Yes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const goEdit = (id) => {
        window.location.href = `/danh-muc/${id}/editcategory`
    }
    let deleted_id;

    const goDelete = (id) => {
        deleted_id = id;
    }

    const fetchAPI = async (url, option) => {
        const res = await fetch(url, option);
        return res.json();
    }

    const onDelete = async () => {
        const url = `https://asmbanhang.herokuapp.com/danh-muc/${deleted_id}/deletecategory`;
        const option = {
            method: 'delete',
            headers: { 'Content-Type': 'application/json' }
        }
        try {
            await fetchAPI(url, option);
            window.location.href = '/danh-muc';
        } catch (e) { console.log('Delete error: ', e) }
    }

</script>